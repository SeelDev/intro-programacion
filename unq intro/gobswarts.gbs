function puedenGanarBatallaMagosContraMortifagos(){
    /*
        Proposito: Indica si los magos pueden derrotar a los mortifagos en una batalla
        Precondicion: Ninguna
        Tipo: booleano
        Observacion: El poder magico total de los magos debe ser mayor al poder magico
        total de los mortifagos.
    */
    
    return (cantPoderMagicoTotalDe_(categoríaMago()) > cantPoderMagicoTotalDe_(ategoríaMortifago()))
}

function cantPoderMagicoTotalDe_(categoriaPersonaje){
    
    /*
    Proposito: Describe la cantidad total de poder magico de **categoriaPersonaje**
    Precondicion: Ninguna
    Parametro: 
    * categoriaPersonaje: numero : representa la categoria de los personajes.
    Tipo: numero
    Observacion: Es un recorrido de acumulacion de lAS HABITACIONES De gobwarts del tablero, para sumar el total del poder magico de un personaje
    */
    
    cantPoderPersonaje := 0 
    
    IrALaPrimerCeldaEnUnRecorridoAl_Y_(Este, Norte) 
    while ( haySiguienteCeldaEnUnRecorridoAl_Y_(Este, Norte)){
                
        cantPoderPersonaje :=  cantPoderPersonaje + cantidadDePoderDe_EnHabitacion(categoriaPersonaje)
        IrASiguienteCeldaEnUnRecorridoAl_Y_(Este, Norte)
        
    }
    cantPoderPersonaje :=  cantPoderPersonaje + poderMágicoDelPersonaje()
    
    return(cantPoderPersonaje)
}


function cantidadDePoderDe_EnHabitacion(categoriaPersonaje){
    /*
        Proposito: Describe la cantidad de Poder que tiene **categoriaPersonaje**
        en el caso de que esté en la habitacion.
        Precondicion: 
        Tipo: numero
        Parametro:
        ** categoriaPersonaje: numero : representa la categoria de los personajes.
    */
    
    return(
        choose poderMágicoDelPersonaje() when (hayPersonajeDeCategoría_(categoriaPersonaje)))
                            0            otherwise
        )
}


function estaElSeñorGobscuroEnGobwarts(){
    /*
        Proposito: Indica si el señor gobscuro está en gobwarts
        Precondicion: Hay un sólo señor Gobscuro
        Tipo: booleano
        Observacion: Es un recorrido de busqueda (sin saber si está) de habitaciones de Gobswarts, buscando el 
        señor gobscuro
    */
    
    IrALaPrimerHabitacion()--IrALaPrimerCeldaEnUnRecorridoAl_Y_(Este, Norte) 
    while(haySiguienteHabitacion() && not esSeñorGobscuroEnGobwarts() ) -- haySiguienteCeldaEnUnRecorridoAl_Y_(Este, Norte)
          
         IrASiguienteHabitacion() -- IrASiguienteCeldaEnUnRecorridoAl_Y_(Este, Norte) 
    }
    return(esSeñorGobscuroEnGobwarts())
    
}


function esSeñorGobscuroEnGobwarts(){
    /*
        Proposito: Indica si el Señor Gobscuro esta en la habitacion actual
        Precondicion: Ninguna
        Tipo: booleano
        Observacion: El Señor Gobscuro es un mortifago, si está dentro de Gobswarts
        está en una mazmorra y su poder es sólo 1
    */
    
    return( 
        
            tipoDeHabitación() == habitaciónMazmorras()
            &&
            esMortifagoDePoder1()
    )
}

function esMortifagoDePoder1(){
    /*
        Proposito: Indica si el poder de categoria mortifago es igual a 1
        Precondicion: Ninguna
        Tipo:  booleano
    */
    return ( hayPersonajeDeCategoría_(categoriaMortifago()) && poderMágicoDelPersonaje() == 1)
}



