function categoriaDePersonajeConMayorPoderMágico() {
    /*
        Proposito: Describe la categoria del personaje que posee mayor poder magico de todo gobarts
        Precondicion: Hay un personaje con mayor poder que todos los demas.
        Observacion: es un recorrido de maximos entre las habitaciones de Gobwarts,
        para obtener la categoria del personaje con mayor poder.
    */
    
   
    laMejorCategoriaPorAhora := cantPoderMagicoTotalDe_(minCategoria)
    
    while( laMejorCategoriaPorAhora /= cantPoderMagicoTotalDe_(maxCategoria) ) {
        
        laMejorCategoriaPorAhora := maximoEntre_Y_(cantPoderMagicoTotalDe_(maxCategoria), cantPoderMagicoTotalDe_(minCategoria))
        
        laMejorCategoriaPorAhora := siguienteCategoria_(categoría) 
        
    }
}
















































