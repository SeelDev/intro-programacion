procedure Mover3VecesAlNorte(){
    
    /*
    Proposito: Mueve al cabezal 3 veces al norte desde la celda actual.
    Precondicion: Debe haber 3 celdas al norte de la celda actual.
    */
    
    repeat (3) {
        Mover(Norte)
    }
    
}


procedure Mover3VecesAlEste(){
    
    /*
    Proposito: Mueve al cabezal 3 veces al este desde la celda actual.
    Precondicion: Debe haber 3 celdas al este de la celda actual.
    */
    
    repeat (3) {
        Mover(Este)
    }
    
}


