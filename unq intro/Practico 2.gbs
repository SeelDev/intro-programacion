procedure PonerUnaDeCada() { //BIBLIOTECA
    
    /*
    Proposito: Pone una bolita de cada color en la celda actual.
    Precondicion: Ninguna
    */
    Poner(Rojo)
    Poner(Negro)
    Poner(Verde)
    Poner(Azul)
}

procedure Mover3VecesAlOeste() {
    
    /*
    Proposito: El cabezal se posiciona en la tercera celda hacia el oeste desde la celda actual
    Precondicion: debe haber al menos 3 celdas hacia le oeste de la celda actual
    */
    
    Mover(Oeste)
    Mover(Oeste)
    Mover(Oeste)
}


procedure DibujarLíneaMulticolorDeLargo4() {
    
    /*
    Proposito: Dibujar una linea multicolor de 4 celdas de largo hacia el este. El cabezal finaliza en la celda inicial
    Precondicion: Debe haber al menos cuatro celdas hacia el este de la celda actual
    */
    PonerUnaDeCada() 
    Mover(Este)
    PonerUnaDeCada() 
    Mover(Este)
    PonerUnaDeCada() 
    Mover(Este)
    PonerUnaDeCada() 
    Mover3VecesAlOeste() // El cabezal debe quedar en la celda inicial.

}

procedure DibujarCuadradoMulticolorDeLado4() {
    
    /*
    Proposito: Pone un cuadrado multicolor de 4 celdas de largo y de alto. El cabezal termina en la celda inicial
    Precondicion: Debe haber al menos 4 celdas hacia el este y 4 celdas hacia el Norte
    */
    
   DibujarLíneaMulticolorDeLargo4()
   
   Mover(Norte)
   DibujarLíneaMulticolorDeLargo4()
   
   Mover(Norte)
   DibujarLíneaMulticolorDeLargo4()
   
   Mover(Norte)
   DibujarLíneaMulticolorDeLargo4()
   
   Mover(Sur)
   Mover(Sur)
   Mover(Sur)
}






