procedure PonerGuardaEnL(){
    
    /*
    Proposito: Dibujar una guarda en L. El cabezal termina en la celda inicial
    Precondicion: Debe haber al menos 3 celdas hacia el este y hacia el norte de la celda inicial
    */
    
    DibujarLargoDeLaGuarda()
    IrAlBorde(Oeste)
    DibujarAltoDeLaGuarda()
    IrAlBorde(Sur)
    
    
}


procedure DibujarLargoDeLaGuarda(){
    
    /*
    Proposito: Pone una fila de azulejos hacia el este desde la celda actual
    Precondicion: Debe haber al menos 3 celdas hacia el este desde la celda actual
    */
    
    DibujarUnAzulejo()
    Mover(Este)
    DibujarUnAzulejo()
    Mover(Este)
    DibujarUnAzulejo()
    
}



procedure DibujarAltoDeLaGuarda(){
    /*
    Proposito: Pone una columna de azulejos hacia el Norte desde la celda actual
    Precondicion: Debe haber al menos 3 celdas hacia el Norte desde la celda actual
    */
    
    
    Mover(Norte)
    DibujarUnAzulejo()
    Mover(Norte)
    DibujarUnAzulejo()
    
}

