

procedure Mover3VecesAl_(direcciónAMover){
    
    /*
    Proposito: Mover 3 veces al **direccionAMover** desde la celda actual.
    Precondicion: deben haber al menos 3 celdas al **direccionAMover** desde la celda actual.
    Parametro: direccionAMover: direccion
    */
    
    repeat(3){
       Mover(direcciónAMover)
    }
}


procedure Poner6DeColor_(colorAPoner){
    
    /*
    Proposito: Poner 6 veces el color **colorAPoner** en la  celda actual.
    Precondicion: Ninguna
    Parametro: colorAPoner : color
    */
    
    repeat(6){
        Poner(colorAPoner)
    }
}



procedure Poner_Al_(colorAPoner, direcciónDondePoner){
    /*
    Proposito: Poner una bolita de color **colorAPoner** en la celda 
    lindante al **direcciónDondePoner** desde la celda actual.
    Precondicion: Debe haber al menos una celda **direcciónDondePoner** de la celda actual
    Parametro: colorAPoner : color
        direcciónDondePoner : direccion
    */
    
    Mover(direcciónDondePoner)
    Poner(colorAPoner)
}



procedure ReemplazarUnaDe_Por_(colorAReemplazar, colorPorElCualReemplazar){
    
    /*
    Proposito: Reemplazar la bolita de color **colorAReemplazar** 
    por una bolita de color **colorPorElCualReemplazar** en la celda actual
    Precondicion: la celda debe estar vacía
    Parametro: - colorAReemplazar : color : color que se reemplaza
    - colorPorElCualReemplazar : color : color por el cual se reemplaza
    */
    
    Poner(colorAReemplazar)
    Sacar(colorAReemplazar)
    Poner(colorPorElCualReemplazar)
}


procedure Poner_ADistancia3Al_(color, dirección) {
    
    /*
    Proposito: Poner una bolita de color **color** a 3 celdas de distancia hacia 
    **direccion** de la celda actual.
    Precondicion: debe haber al menos 3 celdas hacia el **dirección** desde la celda actual.
    Parametro: - color : color: color a poner
    - direccion: direccion : direccion a la que se va a mover
    */
    
    Mover3VecesAl_(dirección)
    Poner(color) 
    
    
}


procedure Pintar3Puntos_(colorPunto){
    
    /*
    Proposito: Pinta 3 puntos de color Azul hacia el este, con una distancia de 3 
    celdas desde la celda actual. El cabezal termina en la celda inicial
    Precondicion: Debe haber al menos 6 celdas hacia el este de la celda actual
    */
    
    Poner(colorPunto)
    repeat (2){
    Poner_ADistancia3Al_(colorPunto, Este)
    }
    Mover3VecesAl_(Oeste)
    Mover3VecesAl_(Oeste)
}



procedure PintarArcoIris(){
    
    /*
    Proposito: Pintar un arcoiris hacia el este de la celda actual. El cabezal finaliza
    en la celda inicial.
    Precondicion: Debe haber al menos 9 celdas hacia el este desde la celda actual.
    */
    
    Pintar3Puntos_(Negro)
    Mover(Este)
    Pintar3Puntos_(Azul)
    Mover(Este)
    Pintar3Puntos_(Rojo)
    Mover(Norte)
    Mover(Oeste)
    Pintar3Puntos_(Verde)
    Mover(Sur)
    Mover(Oeste)
}

