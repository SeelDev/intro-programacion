function celdasCon2BolitasAzules(){ 
    
    --recorrido de acumulacion sobre celdas de la fila, contando cada celda que tiene exactamente 2 bolitas de color Azul
    
    IrAlBorde(Oeste)
    
    cantidadDeCeldasConDosBolitasAzules := unoSi_ceroSiNo(nroBolitas(Azul) == 2)
    
    while(puedeMover(Este)){
        
        Mover(Este)
        cantidadDeCeldasConDosBolitasAzules := cantidadDeCeldasConDosBolitasAzules + unoSi_ceroSiNo(nroBolitas(Azul) == 2)
        
    }

    return( cantidadDeCeldasConDosBolitasAzules )
}

