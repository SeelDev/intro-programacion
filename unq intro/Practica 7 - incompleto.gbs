procedure AlimentarArboles(){
    
    /*
    Proposito: Alimentar arboles con sus nutrientes de la celda actual.
    Precondicion: Debe haber al menos un nutriente en la celda actual.
    Observacion: Un Arbol se alimenta con un nutriente
    */
   if(hayNutrienteSuficiente()){
        AlimentarArbolesConNutriente()
        
   }else { //si no hay la cantidad necesaria
       ConsumirTodosLosNutrientes()
   }
}


function hayNutrienteSuficiente() {
    /*
    Proposito: Indica si hay al menos un nutriente en la celda actual.
    Tipo: booleano
    */
    return(
        nroBolitas(nutriente()) >= nroBolitas(arbol())
        )
}



procedure AlimentarArbolesConNutriente(){
    /*
    Proposito: Alimentar la cantidad de arboles que haya con su nutriente
    en la celda actual.
    Precondicion: Ninguna
    */
     repeat(nroBolitas(arbol())){
       Sacar(nutriente())
    }
}

procedure ConsumirTodosLosNutrientes(){
    /*
    Proposito: Consume todos los nutrientes de la celda actual.
    Precondicion: Debe haber al menos un nutriente en la celda actual.
    */
    
    SacarTodasLasDeColor_(nutriente())
}


