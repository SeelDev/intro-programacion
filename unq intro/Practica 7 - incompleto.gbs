function cantidadTotalDeBolitasAcá(){
    /*
    Proposito: Describe la cantidad de bolitas total que hay en la celda actual.
    Tipo: Numero
    */
    return (
        nroBolitas(Rojo) +
        nroBolitas(Verde) +
        nroBolitas(Negro) +
        nroBolitas(Azul)
        
        
        )
}

function hayMásDe5BolitasAcá(){
    
    /*
    Proposito: Indica si hay más de 5 bolitas en la celda actual.
    Tipo: booleano
    */
    
    return(
        cantidadTotalDeBolitasAcá() > 5
        )
    
}

function hay5BolitasAcá(){
    /*
    Proposito: Indica si hay exactamente 5 bolitas en la celda actual.
    Tipo: Numero
    */
    return (
        cantidadTotalDeBolitasAcá() == 5
        )
}


function hayAlMenos5BolitasAcá(){
    
    /*
    Proposito: Indica si hay al menos 5 bolitas en la celda actual.
    Tipo : Numero
    */
    return(
        cantidadTotalDeBolitasAcá() <= 5 
        )
    
}


function hayBolitasDeTodosLosColores(){
    /*
    Proposito: Indica si hay al menos una bolita de color Azul, Verde, Negro y Rojo 
    en la celda actual.
    Tipo: Booleano
    */
    return(
        
        hayBolitas(Rojo) || hayBolitas(Verde) || hayBolitas(Rojo) || hayBolitas(Negro) 
    )
    
}



function esCeldaConBolitasFaltantesYNoEsVacia(){
    /*
    Proposito: Indica si en la celda falta al menos una bolita de cualquier color 
    (Azul,Verde,Rojo,Negro) y la celda no está vacía 
    Tipo: Booleano 
    */
    return(
        hayBolitasDeTodosLosColores() && not esCeldaVacía()
        )
}


