    /*
        Proposito: Modelar los dias de la semana
        
    */
    
    case Lunes {}
    case Martes {}
    case Miercoles {}
    case Jueves {}
    case Viernes {}
    case Sabado {}
    case Domingo {}

}

type Dia is record {
    
    /*
        Proposito: Modelar los dias de la semana.
    */
    
    field diaDeSemana
    
}

